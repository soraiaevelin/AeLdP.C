#include <stdio.h>

int main() {
    float m1,m2,m3,gasto,media;
    printf("Informe o valor gasto no mês 1:");
    scanf("%f", &m1);
    
    printf("Informe o valor gasto no mês 2:");
    scanf("%f", &m2);
    
    printf("Informe o valor gasto no mês 3:");
    scanf("%f", &m3);
    
    
    media= (m1+m2+m3)/3;
    
    printf("A média aritmética é: %.2f\n", media);

    return 0;
}
5)
#include <stdio.h>
int main() {
    float altura, peso_ideal;
    const float k = 72.7;
    const float B = 58.0;

    // Solicita a altura
    printf("Informe a altura do homem: ");
    scanf("%f", &altura);

    // Calcula o peso ideal
    peso_ideal = (k * altura) - B;

    // Exibe o resultado
    printf("O peso ideal é: %.2f kg\n", peso_ideal);

    return 0;
}
7)
#include <stdio.h>
int main() {
    float raio, diametro,comprimento,area;

    printf("Informe o valor do raio da circunferencia: ");
    scanf("%f", &raio);

   
    diametro = 2 * raio;
    comprimento=  3.14 * raio;
    area= 3.14 * raio *raio;

    // Exibe o resultado
    printf("O diametro é: %.2f \n", diametro);
     printf("O comprimento é: %.2f \n", comprimento);
      printf("O area é: %.2f \n", area);

    return 0;
}
8)
#include <stdio.h>
int main() {
    float celsius, fahrenheit;

    printf("Informe a temperatura em celsius: ");
    scanf("%f", &celsius);

   
    fahrenheit= celsius *(9.0/5.0) + 32.0;

   
    printf("A temperatura em fahrenheit é: %.2f \n", fahrenheit);
     

    return 0;
}


