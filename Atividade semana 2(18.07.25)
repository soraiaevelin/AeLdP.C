1)
#include <stdio.h>

int main() {
     int dia,mes,ano;
    
    printf("Informe o dia:");
    scanf("%d",&dia);
    
    printf("Informe o mês:");
    scanf("%d",&mes);
    
    printf("Informe o ano:");
    scanf("%d",&ano);
    
    printf("A data formatada é: %02d/%02d/%04d\n",dia,mes,ano);
    
    return 0;
}

2)

#include <stdio.h>

int main() {
    int ano,mes,dia;
    
    printf("informe a data no formato aaaa-mm-dd:");
    
    scanf("%d-%d-%d",&ano,&mes,&dia);
    
     printf("A data formatada é:%02d/%02d/%04d\n", dia ,mes ,ano);
    
    return 0;
}

